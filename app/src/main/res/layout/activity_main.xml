<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.chartexample.charts.BarChartIndividuals
            android:id="@+id/bar_chart_indv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Bar Chart"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.chartexample.charts.BarChartNegetive
            android:id="@+id/bar_chart_sign"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Bar Chart sign"
            app:layout_constraintTop_toBottomOf="@+id/bar_chart_indv" />

        <com.example.chartexample.charts.BarLineCombined
            android:id="@+id/combined_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Combined Chart"
            app:layout_constraintTop_toBottomOf="@+id/bar_chart_sign" />

        <com.example.chartexample.charts.MultiLineChart
            android:id="@+id/multi_line_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/combined_chart" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>