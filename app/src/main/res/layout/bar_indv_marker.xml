<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/bar_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/tooltip_rounded_corner"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textColor="@color/white"
    />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="7dp"
        app:layout_constraintTop_toBottomOf="@id/bar_line"
        app:layout_constraintStart_toStartOf="@id/bar_line"
        app:layout_constraintEnd_toEndOf="@id/bar_line"
        android:src="@drawable/ic_vector_triangle"
        android:rotation="180"
    />

</androidx.constraintlayout.widget.ConstraintLayout>